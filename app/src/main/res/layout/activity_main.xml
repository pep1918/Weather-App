<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_teal_gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ”Ž Search placeholder -->
        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_search_bar"
            android:paddingStart="14dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="?attr/colorOnBackground"
                android:contentDescription="@string/search" />

            <EditText
                android:id="@+id/inputCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="@string/search_city_placeholder"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/btnTheme"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@android:drawable/ic_menu_day"
                app:tint="?attr/colorControlNormal"
                android:contentDescription="@string/toggle_theme" />
        </LinearLayout>

        <!-- Lokasi & tanggal -->
        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ â€”"
            android:textSize="18sp"
            android:textColor="?android:textColorPrimary"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… â€”"
            android:textSize="16sp"
            android:textColor="?android:textColorSecondary" />

        <!-- Cuaca Utama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/imageWeatherIcon"
                android:layout_width="96dp"
                android:layout_height="100dp"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/textTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--Â°C"
                android:textSize="64sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary" />

            <TextView
                android:id="@+id/textCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textSize="22sp"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textHighLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:--Â°C  L:--Â°C"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- ðŸ”¸ Tiga kotak statistik (Humidity/Wind/Pressure) -->
        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <include
                android:id="@+id/cardHumidity"
                layout="@layout/item_stat_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <include
                android:id="@+id/cardWind"
                layout="@layout/item_stat_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <include
                android:id="@+id/cardPressure"
                layout="@layout/item_stat_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- ðŸ”® 7-Day Forecast (grid kotak-kotak) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”® 7-Day Forecast"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="?android:textColorPrimary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forecastRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
